
@model DoctorSlider
<div class="container">
    <h2 class="mb-4">Add Member</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Full Name</label>
            <input asp-for="Name">
            <span asp-validation-for="Name" style=" color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Position" class="form-label">Position</label>
            <input asp-for="Position" />
            <span asp-validation-for="Position" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">Image</label>
            <input asp-for="ImgFile">
            <span asp-validation-for="ImgFile" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

